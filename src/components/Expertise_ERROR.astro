<section id="expertise" class="w-full py-32 px-4 bg-gradient-to-b from-black to-surface">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-20">
      <h4 class="text-primary uppercase text-sm font-bold tracking-widest">01</h4>
      <h4 class="text-primary uppercase text-sm font-bold tracking-widest mt-4">Area Of</h4>
      <h2 class="text-5xl font-bold mb-8 mt-4">Expertise</h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-16">
      {categories.map(cat => (
        <div class="space-y-8">
          <h3 class="text-2xl font-bold text-primary border-b border-primary pb-4">{cat.title}</h3>
          <div class="space-y-8">
            {cat.skills.map(skill => (
              <div>
                <div class="flex justify-between items-start mb-3">
                  <h4 class="text-sm font-bold uppercase text-white pr-4 flex-1">{skill.name}</h4>
                  <span class="text-xs font-bold text-primary whitespace-nowrap">{skill.value}%</span>
                </div>
                <div class="w-full h-1 bg-gray-800 rounded-full overflow-hidden">
                  <div
                    class="h-full bg-primary rounded-full transition-all duration-1000"
                    style={`width: ${skill.value}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
