---
import { getCollection } from 'astro:content'
const projects = await getCollection('projects')
---

<section id="projects" class="w-full py-32 px-4 bg-gradient-to-b from-surface to-black">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-20">
      <h4 class="text-primary uppercase text-sm font-bold tracking-widest">03</h4>
      <h4 class="text-primary uppercase text-sm font-bold tracking-widest mt-4">Featured</h4>
      <h2 class="text-5xl font-bold mb-8 mt-4">Projects</h2>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(p => (
        <div class="relative group rounded-lg overflow-hidden h-64">
          <img src={p.data.image} alt={p.data.title} class="w-full h-full object-cover" />
          <div class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center">
            <div class="text-center">
              <h4 class="text-xl font-bold text-white">{p.data.title}</h4>
              <a href="#" class="btn-outline text-sm mt-4 inline-block">Learn More</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
