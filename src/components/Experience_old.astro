---
const experiences = [
  {
    company: 'Office of the Superintendent of Financial Institutions',
    role: 'Senior Security Operation Analyst',
    period: '2023 – Present',
    desc: 'Incident response, threat hunting, Azure Sentinel, Defender XDR.'
  },
  {
    company: 'Statistics Canada',
    role: 'Platform Optimization Specialist',
    period: '2020 – 2021',
    desc: 'Secure analytics platforms, Kubernetes, Linux hardening.'
  },
  {
    company: 'City of Laval',
    role: 'SecOps / Architect',
    period: '2015 – 2020',
    desc: 'Cloud security, DevSecOps, CI/CD hardening.'
  }
]
---

<section id="experience" class="w-full py-32 px-4 bg-black">
  <div class="max-w-5xl mx-auto px-4">

    <h4 class="text-primary uppercase text-sm font-bold tracking-widest">Some of</h4>
    <h2 class="text-5xl font-bold mb-16">My Cybersecurity Experience</h2>

    <div class="relative border-l border-gray-700 pl-10 space-y-16">
      {experiences.map(exp => (
        <div class="relative">
          <span class="absolute -left-3 top-1 w-6 h-6 bg-accent rounded-full"></span>

          <h4 class="font-semibold">{exp.company}</h4>
          <span class="text-sm text-gray-400">{exp.role}</span>

          <p class="mt-3 text-gray-300">{exp.desc}</p>

          <span class="block mt-2 text-xs text-gray-500">{exp.period}</span>
        </div>
      ))}
    </div>

  </div>
</section>
