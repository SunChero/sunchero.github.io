const experiences = [
  {
    company: 'Office of the Superintendent of Financial Institutions',
    role: 'Senior Security Operation Analyst',
    period: 'April 2023 - Present',
    desc: 'Focus on incident response, threat hunting, and cloud/hybrid security.'
  },
  {
    company: 'Office of the Superintendent of Financial Institutions',
    role: 'Network Infrastructure Specialist',
    period: 'June 2021 - April 2023',
    desc: 'Managed and secured cloud/hybrid infrastructure, IAM, and network security.'
  },
  {
    company: 'Statistics Canada',
    role: 'Platform Optimization Specialist',
    period: 'November 2020 - June 2021',
    desc: 'Operated secure analytics platforms with Linux, Azure, Kubernetes, and Docker.'
  },
  {
